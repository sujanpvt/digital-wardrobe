{
  "name": "digital-wardrobe",
  "version": "1.0.0",
  "description": "Digital wardrobe application for hackathon",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "postinstall": "if [ -d frontend ]; then cd frontend && npm ci && REACT_APP_API_URL=/api npm run build; else echo 'Skipping frontend build: frontend dir not found'; fi",
    "install-client": "cd frontend && npm install",
    "test-setup": "node test-setup.js",
    "setup": "npm install && cd frontend && npm install && echo 'Setup complete! Run npm run test-setup to verify configuration.'"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "cloudinary": "^1.40.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "openai": "^4.0.0",
    "colorthief": "^2.3.2",
    "sharp": "^0.32.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": ["wardrobe", "fashion", "outfit", "digital"],
  "author": "Your Name",
  "license": "MIT"
}
